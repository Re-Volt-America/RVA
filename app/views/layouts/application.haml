!!!
%html{:lang => "en"}
  = render :partial => "head"
  %body
    = render :partial => "nav"
    = yield :splash if content_for?(:splash)
    .container
      = render :partial => "alerts"
      = if content_for?(:content) then yield :content else yield end

    = yield :results if content_for?(:results)

    .container
      %hr
      = render :partial => "footer"
