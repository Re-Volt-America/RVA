= form_with(model: car) do |form|
  - if car.errors.any?
    #error_explanation
      %h2
        = pluralize(car.errors.count, "error")
        prohibited this car from being saved:
      %ul
        - car.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label :speed
    = form.text_field :speed
  .field
    = form.label :accel
    = form.text_field :accel
  .field
    = form.label :weight
    = form.text_field :weight
  .field
    = form.label :folder_name
    = form.text_field :folder_name
  .actions
    = form.submit
