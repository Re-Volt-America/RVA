- content_for :title, "Re-Volt America - #{t("classes.amateur")} Cars"
- meta :title, "#{t("classes.amateur")} Cars - #{ORG::NAME_SHORT}"
- meta :description, "Cars of the Amateur class. These are the cars from the Amateur class required to race online on RVA!"
- meta :image, "https://rva.lat/assets/img/og/amateur.png"

#car-cards-display
  %h2
    = "#{t('rva.cars.title')} - #{t("classes.amateur")}"

  = render :partial => "application/subnav", :locals => {:season => current_season, :category => SYS::CATEGORY::AMATEUR}

  .sticky-top.search-bar
    .row
      .col-xl-11.col-lg-10.col-md-10.col-xs-9.col-8.sticky-top
        %input#input.form-control{placeholder: "Search...", type: "text"}/
      .col-xl-1.col-lg-2.col-md-2.col-xs-3.col-4
        = render :partial => "car_category_selector"

  - if @cars.none?
    %h5.text-center
      = "No cars to display"
  - else
    .row
      - @cars.each do |car|
        = render :partial => "car_card", :locals => { :car => car }
