- content_for :title, t("tournaments.meta.index.page-title")

#tournaments
  %h1
    =  t("tournaments.title")

  - if @tournaments.none?
    %h5.text-center.mt-3
      = t("tournaments.no-tournaments")
  - else
    - @tournaments.each do |tournament|
      .row
        .col-12
          %a.tournament-banner{:href => tournament_path(tournament)}
            = image_tag tournament.tournament_banner_url, :class => 'tournament-banner' if tournament.tournament_banner

  - if user_is_staff?
    .text-center
      = link_to t("misc.button.new"), new_tournament_path, :class => "btn btn-sm"
