- content_for :title, "Re-Volt America - Tracks"
- meta :title, "RVA Tracks"
- meta :description, "The tracks in the RVA Track Pack of the current season."
- meta :image, "https://rva.lat/assets/img/og/tracks.png"

%h2.mb-4
  = t('rva.tracks.title')

= render :partial => "application/subnav"

#tracks
  = paginate @tracks

  .row.mt-4
    - @tracks.each do |track|
      .col-xxl-4.col-xl-4.col-lg-4.col-md-6.col-sm-12.col-xs-12
        .track-container.text-center
          .track.thumbnail
            .img
              %a{:href => track_path(track)}
                %img.img-responsive{:alt => "", :src => track.thumbnail_url, :height => "246", :width => "290"}
            .caption{:style => "text-align: center;"}
              %h1.lead
                %a{:href => track_path(track)}
                  = track.name

  = paginate @tracks
