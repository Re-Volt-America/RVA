- cache "Session##{@session.id}" do
  .container
    = render :partial => "application/subnav", :locals => { :season => @session.ranking.season, :rankings => @session.ranking.season.rankings, :ranking => @session.ranking, :session => @session }

    .row
      .col-xl-5.col-lg-5.col-md-12.col-xs-12
        .session-details.mb-4
          %h2
            = "#{category_name(@session.category)} Races (Session #{@session.number})"
          %ul
            %li
              = "Version: #{@session.version}"
            %li
              = "Connection: #{@session.protocol} (Server)"
            %li
              = "Mode: #{@session.physics}"
            %li
              = "Pickups: #{@session.pickups ? "Enabled" : "Disabled"}"
            %li
              = "Teams: #{@session.teams? ? "Yes" : "No"}"

  #results.container
    %table.table.table-sm.table-fluid.table-responsive
      %thead
        %tr
          %th.text-center.align-middle{:width => "1%"}
            = @rva_results[0][0] # "#"
          %th.align-middle{:width => "8%"}
            = @rva_results[0][1] # "Date"
          %th.text-center.align-middle{:width => "1%"}
            FP
          %th.align-middle{:width => "30%"}
            Racer
          - @rva_results[0].slice(2, @session.races.size).each do |track|
            %th.text-center.align-middle{:width => "4%"}
              = link_to track.short_name, track_path(track)
          %th.pp-header.text-center.align-middle{:width => "2%"}
            PP
          %th.pa-header.text-center.align-middle{:width => "2%"}
            PA
          %th.cc-header.text-center.align-middle{:width => "2%"}
            CC
          %th.mp-header.text-center.align-middle{:width => "2%"}
            MP
          %th.po-header.text-center.align-middle{:width => "2%"}
            PO
      %tbody
        - @rva_results.drop(1).each do |row|
          - if @count.even?
            %tr
              %td.number-col.text-center.align-middle
                = row[0]
              %td.date-col
                = row[1]
              %td.fp-col.text-center.align-middle
                = row[2]
              %td.racer-col
                - if row[3].is_a?(User)
                  = link_to row[3].username, user_path(row[3]), :style => "color: #{row[3].username.eql?(@session.host) ? "yellow" : ""};"
                - else
                  = row[3]
              - row[4].each do |pos|
                %td.pos.text-center.align-middle{:class => "#{pos == "1" ? 'first-place' : ''}" "#{pos == "2" ? 'second-place' : ''} #{pos == "3" ? 'third-place' : ''}"}
                  = pos
              %td.pp.text-center.align-middle
                = row[5]
              %td.pa.text-center.align-middle
                = row[6]
              %td.cc.text-center.align-middle
                = row[7]
              %td.mp.text-center.align-middle
                = row[8]
              %td.po.text-center.align-middle
                = row[9]
          - else
            %tr
              %td.number-col
                = row[0]
              %td.date-col
                = row[1]
              %td.fp-col.text-center.align-middle
                = row[2]
              %td.racer-col
                = row[3]

              - i = 0
              - step = 0
              - colspan = 1
              - first = true
              - row[4].each do |item|
                - if !step.zero?
                  - step -= 1
                  - colspan -= 1
                  - i += 1
                  - next

                - if item.eql?("x")
                  - col = i
                  - while row[4][col + 1].eql?("x")
                    - step += 1
                    - colspan += 1
                    - col += 1

                - if item.is_a?(Car)
                  - col = i
                  - while not row[4][col + 1].is_a?(Car) and not %w[!CC !PA !PP !MP !PO].include?(row[4][col + 1])
                    - step += 1
                    - colspan += 1
                    - col += 1

                - if item.is_a?(Car)
                  %td.car{:colspan => colspan}
                    = link_to item.name, car_path(item)
                - if item.eql?("x")
                  %td{:colspan => (first ? colspan : 1)}
                    = ""
                - if %w[!CC !PA !PP !MP !PO].include?(item)
                  %td{:class => "#{item.eql?("!CC") ? 'cc' : ''}" "#{item.eql?("!PA") ? 'pa' : ''}" "#{item.eql?("!PP") ? 'pp' : ''}" "#{item.eql?("!MP") ? 'mp' : ''}" "#{item.eql?("!PO") ? 'po' : ''}"}
                    = ""

                - i += 1
                - first = false

          - @count += 1

    .row
      .col-4
        %b
          FP:
        Final Position
      .col-4
        %b
          PP:
        Average Position
      .col-4
        %b
          PA:
        Accumulated Score
      .col-4
        %b
          PO:
        Official Score
      .col-4
        %b
          CC:
        Race Count
      .col-4
        %b
          MP:
        Participation Multiplier
